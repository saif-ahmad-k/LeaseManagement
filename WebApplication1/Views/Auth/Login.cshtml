@model WebApplication1.Models.tblUser

@{
    Layout = null;
    var message = TempData["Message"];
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Login</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/assets/img/favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/bootstrap.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/font-awesome.min.css">

    <!-- Feathericon CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/feather.css">

    <!--font style-->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600&display=swap" rel="stylesheet">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/style.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="assets/js/html5shiv.min.js"></script>

        <script src="assets/js/respond.min.js"></script>
    <![endif]-->

</head>
<body class="account-page">

    <!-- Main Wrapper -->
    <div class="main-wrapper">
        <div class="account-content">

            <div class="container">

                <div class="row">
                    <!-- Left side with logo and description -->
                    <div class="col-md-6 login-logo-section" style="background-color: #f8f9fa; padding: 50px;">
                        <div class="account-logo">
                            <a href="index.html"><img src="\Images\logo3.png" alt="Your Logo" style="width: 500px; height: auto;"></a>
                        </div>
                        <div class="logo-description">
                            <h2>Capital Asset Resources</h2>
                            @*<p>Chemin de Chamoryon 24, 1806 St. Legier, Vaud/Switzerland. Email: WdHCoffeeConsulting@gmail.com</p>*@
                        </div>
                    </div>

                    <!-- Right side with login form -->
                    <div class="col-md-6 login-form-section" style="background-color: #ffffff; padding: 50px;">
                        <div class="account-box">
                            <div class="account-wrapper">
                                <h3 class="account-title">Login</h3>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    if (message != null)
                                    {
                                        <div class="alert alert-success">
                                            <strong>@message.ToString()</strong>
                                        </div>
                                    }

                                    <div class="inset">
                                        <p>
                                            @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-4 col-form-label-sm" })
                                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control form-control-sm", required = "required" } })
                                        </p>
                                        <p>
                                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-4 col-form-label-sm" })
                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "password", required = "required" } })
                                        </p>
                                        <span style="color: red; font-size: 14px;" id="errMsg"></span>
                                    </div>
                                    <div class="form-group text-center">
                                        <div style="padding-bottom: 10px;">
                                            <button type="submit" class="btn btn-primary account-btn" name="command" value="Login">Log in</button>
                                        </div>
                                    </div>
                                }
                            </div>
                            @*<div>
                                <a href="@Url.Action("RequestCredentials", "Auth")" class="btn btn-link">Request for Login Credentials</a>
                            </div>*@
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script src="~/Content/assets/js/jquery-3.5.0.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Content/assets/js/app.js"></script>
    <footer class="footer">
        <p class="footer-text">Powered by Technoeagles | V1.0</p>
    </footer>

    <!-- jQuery and other scripts ... -->
    <!-- Inline CSS for Footer -->
    <style>
        .footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px 0;
            position: absolute;
            width: 100%;
            bottom: 0;
        }

        .footer-text {
            font-size: 12px;
            font-style: italic;
            margin: 0;
        }
    </style>
</body>

</html>
